{
    "compilerOptions": {
        "rootDir": ".",

        "target": "ES2024",
        "useDefineForClassFields": true,
        "module": "nodenext",
        "lib": ["ES2024"],
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true
    }
}
